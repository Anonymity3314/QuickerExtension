<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <!-- 菜单按钮上的图像样式 -->
    <Style x:Key="SelectButtonImage" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="3,0,0,0"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
    </Style>

    <!-- 场景按钮上的图像样式 -->
    <Style x:Key="SceneButtonImage" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="24"/>
    </Style>
    
    <!-- 菜单按钮上的图像样式 -->
    <Style x:Key="MenuButtonImage" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="7,0,0,0"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Width" Value="166"/>
    </Style>

    <!-- 添加动作图像样式 -->
    <Style x:Key="AddActionImage" TargetType="Image">
        <Setter Property="Source" Value="/Resources/Images/Add.png"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Width" Value="36"/>
    </Style>
</ResourceDictionary>